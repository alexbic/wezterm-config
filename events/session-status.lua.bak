M.get_status_elements = function()
  local elements = {}
  
  wezterm.log_info("üîç get_status_elements: –ø—Ä–æ–≤–µ—Ä—è–µ–º saved_mode=" .. tostring(session_state.saved_mode))
  
  -- –ü–æ–∫–∞–∑—ã–≤–∞–µ–º saved_mode –µ—Å–ª–∏ –æ–Ω –µ—Å—Ç—å
  local mode_to_show = session_state.saved_mode
  if mode_to_show and mode_icons[mode_to_show] then
    local mode = mode_icons[mode_to_show]
    wezterm.log_info("üîç get_status_elements: –¥–æ–±–∞–≤–ª—è–µ–º —ç–ª–µ–º–µ–Ω—Ç —Ä–µ–∂–∏–º–∞ " .. mode_to_show)
    table.insert(elements, {
      type = "mode",
      icon = mode.icon,
      text = mode.name,
      color = mode.color
    })
  else
    wezterm.log_info("üîç get_status_elements: –ù–ï–¢ —ç–ª–µ–º–µ–Ω—Ç–æ–≤ —Ä–µ–∂–∏–º–∞ –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è")
  end
  
  wezterm.log_info("üîç get_status_elements: –≤–æ–∑–≤—Ä–∞—â–∞–µ–º " .. #elements .. " —ç–ª–µ–º–µ–Ω—Ç–æ–≤")
  return elements
end

